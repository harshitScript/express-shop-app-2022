<%- include("../includes/head.ejs") %> <%- include("../includes/navigation.ejs")
%>
<main>
  <% if (products.length > 0) { %>
  <div class="flex-box">
    <% products.forEach(function(singleProduct){ %>
    <article class="card product-item">
      <header>
        <h1 class="product__title"><%= singleProduct?.title %></h1>
        <div class="card__image">
          <img
            src="<%= singleProduct.imageUrl %>"
            alt="image"
            width="200px"
            height="200px"
          />
        </div>
        <div class="card__content">
          <p class="product__price">â‚¹<%= singleProduct?.price %></p>
          <p class="product__description"><%= singleProduct?.description %></p>
        </div>
        <div class="card__actions">
          <a
            href="/admin/edit-product/<%= singleProduct?.id %>"
            id="edit"
            class="btn"
            >Edit</a
          >
          <a
            href="/admin/delete-product/<%= singleProduct?.id %>"
            id="delete"
            class="btn"
            >Delete</a
          >
        </div>
      </header>
    </article>
    <% }); %>
  </div>

  <% } else { %>
  <p>No products</p>
  <% } %>
</main>
<%- include("../includes/end.ejs") %>
