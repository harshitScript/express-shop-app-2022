<%- include("../includes/head.ejs") %> <%- include("../includes/navigation.ejs")
%>
<main>
  <% if (products.length > 0) { %>
  <div class="flex-box">
    <% products.forEach(function(singleProduct){ %>
    <article class="card product-item">
      <header>
        <h1 class="product__title"><%= singleProduct?.title %></h1>
        <div class="card__image">
          <img
            src="/<%= singleProduct.imageURL %>"
            alt="image"
            width="200px"
            height="200px"
          />
        </div>
        <div class="card__content">
          <p class="product__price">â‚¹<%= singleProduct?.price %></p>
          <p class="product__description"><%= singleProduct?.description %></p>
        </div>
        <div class="card__actions">
          <a
            href="/admin/edit-product?id=<%= singleProduct?._id %>"
            id="edit"
            class="btn"
            >Edit</a
          >
          <a
            href="/admin/delete-product?id=<%= singleProduct?._id %>"
            id="delete"
            class="btn"
            >Delete</a
          >
        </div>
      </header>
    </article>
    <% }); %> <%- include("../includes/pagination.ejs",{numberOfPages,type :
    "admin"}) %>
  </div>
  <%- include("../includes/logout-btn.ejs") %> <% } else { %>
  <p>No products</p>
  <% } %>
</main>
<%- include("../includes/end.ejs") %>
